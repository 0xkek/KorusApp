# Database
DATABASE_URL="postgresql://user:password@localhost:5432/korus_db"

# JWT Secret
JWT_SECRET="your-jwt-secret-key"

# Solana Configuration
SOLANA_RPC_URL="https://api.devnet.solana.com" # Use mainnet-beta for production

# Helius API Key for NFT fetching
HELIUS_API_KEY="your-helius-api-key"

# Platform Wallet (receives sponsored post payments)
PLATFORM_WALLET_ADDRESS="YOUR_PLATFORM_WALLET_PUBLIC_KEY"
PLATFORM_WALLET_PRIVATE_KEY="YOUR_PLATFORM_WALLET_PRIVATE_KEY_BASE58"

# Team Wallet (receives 45% of revenue)
TEAM_WALLET_ADDRESS="YOUR_TEAM_WALLET_PUBLIC_KEY"

# ALLY Token
ALLY_TOKEN_MINT="YOUR_ALLY_TOKEN_MINT_ADDRESS"

# Frontend URL
FRONTEND_URL="http://localhost:8081"

# Port
PORT=3000

# Mock Mode (for testing without database)
MOCK_MODE=false

# Security Settings
# WARNING: Only set to 'true' for development/testing
# NEVER enable in production!
ALLOW_AUTH_BYPASS=false

# CORS Configuration (comma-separated list of allowed origins)
# Example: http://localhost:8081,http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=

# Feature Flags
ENABLE_MODERATION=false
ENABLE_REPUTATION=false
ENABLE_WEEKLY_DISTRIBUTION=false

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Node Environment (development, staging, production)
NODE_ENV=development