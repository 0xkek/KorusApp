{
  "expo": {
    "name": "Korus",
    "slug": "KorusApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "korus",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Radical Authenticity - A social platform with blockchain integration",
    "primaryColor": "#43e97b",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.korus.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Korus needs access to your camera to take photos for posts and avatars.",
        "NSPhotoLibraryUsageDescription": "Korus needs access to your photo library to select images for posts and avatars.",
        "NSPhotoLibraryAddUsageDescription": "Korus needs permission to save images to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.korus.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "korus.app",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      "./plugins/withAndroidMinSdk",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a1a"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6f182b5a-61e8-4be6-83a4-0accb8873ca3"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/6f182b5a-61e8-4be6-83a4-0accb8873ca3"
    }
  }
}
